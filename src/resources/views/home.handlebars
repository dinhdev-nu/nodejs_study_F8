<h1>Home Page</h1>

<div class="mt-4" style="display: flex; flex-wrap: wrap;">
        {{#each courses}}
        <div class="card-course" style="margin-top: 20px; margin-right: 40px">
            <div class="card" style="width: 18rem;">
                <a href="/courses/{{this.slug}}"><img src="{{this.image}}" class="card-img-top" alt="{{this.name}}"></a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua Khóa Học</a>
                </div>
            </div>
        </div>
        {{/each}}
</div>